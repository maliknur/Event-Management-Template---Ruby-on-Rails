<% @page_title = "Sign-Up | Login" %>
<div class="container">
	
	<div class="rov">
		<h1>Welcome</h1>	
		<p>Please sign up if new user or login</p>
	</div>

	<!-- Registration form -->
	<div class="row">
		<div class="col-md-5 col-sm-12 well">
				<h3>Register</h3>
				<br>
				<%= form_for(:user, :url => {:controller => 'users', :action => 'create'}, :html => {:class => "form-horizontal"})  do |f|  %>
				<div class="form-group">
					<%= f.label :first_name, 'First name:', class: "form-label col-md-4 col-xs-12 text-right"%>
					<div class="col-md-8 col-xs-12">
					<%= f.text_field :first_name, class: "form-control"  %>
					</div>
				</div>
				<div class="form-group">
					<%= f.label :last_name, 'Last name:', class: "form-label col-md-4 col-xs-12 text-right"  %>
					<div class="col-md-8 col-xs-12">
					<%= f.text_field :last_name, class: "form-control"  %>
					</div>
				</div>
				<div class="form-group">
					<%= f.label :email, 'Email:', class: "form-label col-md-4 col-xs-12 text-right"  %>
					<div class="col-md-8 col-xs-12">
					<%= f.text_field :email, class: "form-control"  %>
					</div>
				</div>
				<div class="form-group">
					<%= f.label :password, 'Password:', class: "form-label col-md-4 col-xs-12 text-right"  %>
					<div class="col-md-8 col-xs-12">
					<%= f.password_field :password, class: "form-control"  %>
					<small>* password should be at least 6 characters</small>
					</div>
				</div>
				<div class="form-group">
					<%= f.label :password_confirmation, 'Pass confirmation:', class: 'form-label col-md-4 col-xs-12 text-right'  %>
					<div class="col-md-8 col-xs-12">
						<%= f.password_field :password_confirmation, class: "form-control"  %>
					</div>
				</div>
				<div class="form-group">
					<div class="col-md-8 col-md-offset-4 col-xs-12">
						<%= f.submit :Signup, class: "btn btn-primary col-md-4 col-xs-12 col-sm-12 pull-right" %>
					</div>
					
				</div>
				<% end %>
				<ul class="signup_errors">
				<% if @user.errors.any? %>
					<% for message_error in @user.errors.full_messages %>
					<li> * <% message_error  %></li>			
					<% end %>
				</ul>
				<% end %>
		</div>

	<!-- Login form -->
		<div class="col-md-5 col-md-offset-1 col-sm-12 well">
			<h3>Login</h3>
			<br>
			<%= form_for(:session, :url=>{:controller => 'sessions', :action => 'create'}, :html=>{:class => 'form-horizontal'}) do |fl| %>
				<div class="form-group">
					<%= fl.label :email, 'Email:', class: "form-label col-md-4 col-xs-12 text-right"  %>
					<div class="col-md-8 col-xs-12">
						<%= fl.text_field :email, class: "form-control"  %>
					</div>
				</div>
				<div class="form-group">
					<%= fl.label :password, 'Password:', class: "form-laberl col-md-4 col-xs-12 text-right"  %>
					<div class="col-md-8 col-xs-12">
						<%= fl.password_field :password, class: "form-control"  %>
					</div>
				</div>
				<div class="form-group">
					<div class="col-md-8 col-md-offset-4 col-xs-12">
						<%= fl.submit :Login, class: "btn btn-primary col-md-4 col-xs-12 col-sm-12 pull-right"  %>
					</div>
				</div>
			<% end %>
			
		</div>

	</div>
</div>