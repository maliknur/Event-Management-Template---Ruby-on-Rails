<% @page_title = "Edit User Profile" %>
<div class="container">

	<!-- Edit form -->
	<div class="row">
		<div class="col-md-6 col-md-offset-3 col-sm-12 well">
			<% if flash[:notice] %>
			<div class="alert alert-success">
				<%= flash[:notice]  %>
				<b><%= link_to 'Login', sessions_new_path  %></b>
			</div>
			<% end %>

				<h3>Edit User Profile</h3>
				<br>
				<%= form_for(:user, :url => {:controller => 'users', :action => 'update'}, :method=> "patch", :id=>@user.id, :html => {:class => "form-horizontal"})  do |f|  %>
				<%= render 'shared/error_messages' %>
				<div class="form-group">
					<%= f.label :first_name, 'First name:', class: "form-label col-md-4 col-xs-12 text-right"%>
					<div class="col-md-8 col-xs-12">
					<%= f.text_field :first_name, class: "form-control"  %>
					</div>
				</div>
				<div class="form-group">
					<%= f.label :last_name, 'Last name:', class: "form-label col-md-4 col-xs-12 text-right"  %>
					<div class="col-md-8 col-xs-12">
					<%= f.text_field :last_name, class: "form-control"  %>
					</div>
				</div>
				<div class="form-group">
					<%= f.label :email, 'Email:', class: "form-label col-md-4 col-xs-12 text-right"  %>
					<div class="col-md-8 col-xs-12">
					<%= f.text_field :email, class: "form-control"  %>
					</div>
				</div>
				<div class="form-group">
					<%= f.label :location, 'Location:', class: "form-label col-md-4 col-xs-12 text-right"  %>
					<div class="col-md-8 col-xs-12">
						<div class="col-md-8 col-xs-8"  style="right-padding: 0px; left-padding: 0px; padding-left: 0px; padding-right: 0px;">
						<%= f.text_field :location, class: "form-control"  %>
						</div>
						<div class="col-md-4 col-xs-4" style="right-padding: 0px; padding-right: 0px;" >
						<%= select_tag :state, options_for_select(us_states, :selected => @user.state), class: "form-control" %>
						</div>
					</div>
				</div>
				<div class="form-group">
					<div class="col-md-8 col-md-offset-4 col-xs-12">
						<%= link_to "Cancel", events_path, class: "btn btn-default"  %>
						<%= f.submit :Update, class: "btn btn-primary col-md-4 col-xs-12 col-sm-12 pull-right" %>
					</div>
					
				</div>
				<% end %>
		</div>


	</div>
</div>