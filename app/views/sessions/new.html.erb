<% @page_title = "Login" %>
<div class="container">
	<!-- Login form -->
	<div class="row">
		<div class="col-md-6 col-md-offset-3 col-xs-12 well">
			<% if flash[:danger] %>
				<p class="alert alert-danger">
					 <%= flash[:danger]  %>
				</p>
			<% end %>
			<h3>Login</h3>
			<br>
			<%= form_for(:session, :url=>{:controller => 'sessions', :action => 'create'}, :html=>{:class => 'form-horizontal'}) do |fl| %>
				<div class="form-group">
					<%= fl.label :email, 'Email:', class: "form-label col-md-4 col-xs-12 text-right"  %>
					<div class="col-md-8 col-xs-12">
						<%= fl.text_field :email, class: "form-control"  %>
					</div>
				</div>
				<div class="form-group">
					<%= fl.label :password, 'Password:', class: "form-laberl col-md-4 col-xs-12 text-right"  %>
					<div class="col-md-8 col-xs-12">
						<%= fl.password_field :password, class: "form-control"  %>
					</div>
				</div>
				<div class="form-group">
					<div class="col-md-8 col-md-offset-4 col-xs-12">
						<%= fl.submit :Login, class: "btn btn-primary col-md-4 col-xs-12 col-sm-12 pull-right"  %>
					</div>
				</div>
			<% end %>
		</div>
	</div>
</div>
